{
  "name": "abj-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Average Joe's Burger Joint (Tech Matchup App)",
  "main": "server/server.js",
  "scripts": {
    "dev": "GENERATE_SOURCEMAP=false concurrently \"npm run watch --workspace=server\" \"npm run start --workspace=client\"",
    "install-all": "npm install",
    "seed": "npm run seed --workspace=server",
    "build": "npm run build --workspace=client",
    "watch": "npm run watch --workspace=server",
    "start-client": "npm run start --workspace=client",
    "start-server": "npm run start --workspace=server",
    "test-client": "npm test --workspace=client",
    "test-server": "npm test --workspace=server",
    "relay": "relay-compiler",
    "compile": "concurrently \"npm run relay\" \"npm run seed --workspace=server\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@apollo/client": "^4.0.13",
    "@as-integrations/express5": "^1.1.2",
    "@testing-library/react": "^13.4.0",
    "babel-plugin-relay": "^16.0.0",
    "body-parser": "^2.2.2",
    "express": "^5.2.1",
    "firebase": "^10.14.1",
    "graphql": "^16.8.1",
    "jwt-decode": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-relay": "^16.0.0",
    "relay-compiler": "^16.0.0",
    "stripe": "^20.1.2"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
